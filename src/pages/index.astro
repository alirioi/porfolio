---
import Layout from "../layouts/Layout.astro";

import AboutMe from "../components/AboutMe.astro";
import CodeIcon from "../components/icons/Code.astro";
import Hero from "../components/Hero.astro";
import ProfileIcon from "../components/icons/Profile.astro";
import Projects from "../components/Projects.astro";
import SchoolIcon from "../components/icons/School.astro";
import SectionContainer from "../components/SectionContainer.astro";
import TitleSection from "../components/TitleSection.astro";
import CertificateIcon from "../components/icons/Certificate.astro";
import Certificates from "../components/Certificates.astro";
import Technologies from "../components/Technologies.astro";
import StarIcon from "../components/icons/Star.astro";
---

<Layout
  title="Porfolio de Alirio Isea - Desarrollador y Programador Web"
  description="Contrata a Alirio Isea, un desarrollador web full stack en formación. Con experiencia en HTML, CSS, JavaScript y frameworks como React y Astro. ¡Listo para transformar tus ideas en soluciones digitales!"
>
  <main class="text-dark-50 px-8 md:px-0">
    <SectionContainer class="pb-16 py-36 md:pb-36">
      <Hero />
    </SectionContainer>

    <SectionContainer id="proyectos" class="mb-24 md:mb-32">
      <TitleSection>
        <CodeIcon class="size-7" />
        Proyectos
      </TitleSection>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi" class="mb-24 md:mb-32">
      <TitleSection>
        <ProfileIcon class="size-7" />
        Sobre mí
      </TitleSection>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="conocimientos" class="mb-24 md:mb-32">
      <TitleSection>
        <SchoolIcon class="size-7" />
        Conocimientos
      </TitleSection>

      <TitleSection class="text-xl text-accent">
        <CertificateIcon class="size-6" />
        Certificaciones
      </TitleSection>
      <Certificates />

      <TitleSection class="text-xl text-accent">
        <StarIcon class="size-6" />
        Tecnologías
      </TitleSection>
      <Technologies />
    </SectionContainer>
  </main>
</Layout>
